BootStrap: <PROTOCOL>
From: <LOCATION>

%files
    # make the MOOSE repository at-my-current-state available
    # for vetted versions of PETSc during %post
    <MOOSE_DIR> /usr/local/tmp_moose_src

%environment
    # PETSc
    export PETSC_DIR=/usr/local/petsc
    export PETSC_ARCH=arch-moose

%post
    # Build PETSc
    umask 022
    export PETSC_PREFIX=/usr/local/petsc
    cd /usr/local/tmp_moose_src/scripts
    echo -e "JOBS: $MOOSE_JOBS"
    ./update_and_rebuild_petsc.sh

    # Test PETSc
    cd /usr/local/tmp_moose_src/petsc
    make SLEPC_DIR=/usr/local/petsc PETSC_DIR=/usr/local/petsc PETSC_ARCH="" check

    # Fix possible permissions
    chmod -R o=u-w,g=u-w /usr/local/petsc

    # Clean Up
    rm -rf /usr/local/tmp_moose_src
