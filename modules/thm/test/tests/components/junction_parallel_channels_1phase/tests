[Tests]
  [equal_area_x_direction]
    type = 'CSVDiff'
    input = 'equal_area_with_junction.i'
    # The gold file was actually produced with equal_area_no_junction.i and
    # then renamed to equal_area_with_junction_out.csv.
    csvdiff = 'equal_area_with_junction_out.csv'
    max_parallel = 1
  []

  [phy:unequal_area]
    type = 'CSVDiff'
    input = 'phy.unequal_area.i'
    csvdiff = 'phy.unequal_area_out.csv'
    abs_zero = 5e-5
    rel_err = 0
    recover = false
    max_parallel = 1
  []

  [phy:shower_syntax]
    type = 'RunApp'
    input = 'phy.shower.i'
    check_input = true
    recover = false
    max_threads = 1
    max_parallel = 1
  []

  [phy:shower]
    type = 'CSVDiff'
    input = 'phy.shower.i'
    csvdiff = 'phy.shower_out.csv'
    abs_zero = 8e-8
    rel_err = 0
    max_parallel = 1
    heavy = true
  []

  # Tests conservation of mass and energy for 1-phase flow.
  [conservation_1phase]
    type = 'CSVDiff'
    input = 'conservation.i'
    csvdiff = 'conservation_out.csv'
    abs_zero = 2e-8
    max_parallel = 1
  []

  [phy.form_loss]
    type = 'CSVDiff'
    input = 'phy.form_loss.i'
    csvdiff = 'phy.form_loss_out.csv'
    cli_args = 'Components/junction/K=1 Components/junction/A_ref=0.1'
    rel_err = 1e-3
    recover = false
    max_parallel = 1
  []

  # error checking
  [err.missing_ics]
    type = 'RunException'
    input = 'err.missing_ics.i'
    expect_err = "junction: The following initial condition parameters are missing: initial_p initial_T initial_vel_x initial_vel_y initial_vel_z"
    max_parallel = 1
  []

  [err.missing_A_ref]
    type = 'RunException'
    input = 'phy.form_loss.i'
    cli_args = 'Components/junction/K=1'
    expect_err = "junction: With specified form loss factor 'K', parameter 'A_ref' is required."
    max_parallel = 1
  []

  [err.missing_K]
    type = 'RunException'
    input = 'phy.form_loss.i'
    cli_args = '--error Components/junction/A_ref=1'
    expect_err = "junction: Parameter 'A_ref' is specified, but 'K' is not specified, so the junction will behave as if there were no form loss."
    max_parallel = 1
  []

  [err.non_parallel_channels]
    type = 'RunException'
    input = 'equal_area_with_junction.i'
    cli_args = "--error Components/junction/volume=1.0 Components/pipe2/orientation='0 1 0'"
    expect_err = "junction: Connected flow channels are not parallel, use "
    "VolumeJunction1Phase component instead."
    max_parallel = 1
  []

  # jacobian test
  [jac:test]
    type = 'PetscJacobianTester'
    input = 'jac.test.i'
    ratio_tol = 3e-8
    difference_tol = 0.1
    cli_args = 'Debug/check_jacobian=true'
    allow_test_objects = true
    max_threads = 1
    max_parallel = 1
  []
[]
