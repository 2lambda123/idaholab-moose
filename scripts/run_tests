#!/usr/bin/env python
import sys, os

MOOSE_DIR = os.environ.get('MOOSE_DIR', os.path.abspath(os.path.join(os.path.dirname(os.path.realpath(__file__)), '..')))
sys.path.append(os.path.join(MOOSE_DIR, 'python'))

from TestHarness import TestHarness
unit_dir = '../unit' if os.getcwd() == os.path.join(MOOSE_DIR, 'test') else 'unit'
TestHarness.buildAndRun(sys.argv, None, MOOSE_DIR, unit_dir=unit_dir)
