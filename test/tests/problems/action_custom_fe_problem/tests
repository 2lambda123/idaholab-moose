[Tests]
  issues = '#12002'
  design = 'Problem/index.md'

  [./no_problem_block]
    type = 'RunApp'
    input = 'action_custom_fe_problem_test.i'
    expect_out = 'Hello, I am your FEProblemBase-derived class and my name is \S+'

    requirement = 'The system shall allow the creation of the Problem block through a User-defined Action.'
  [../]

  [./with_problem_block_no_type]
    type = 'RunApp'
    input = 'action_custom_fe_problem_test.i'
    expect_out = 'Hello, I am your FEProblemBase-derived class and my name is \S+'
    cli_args = 'Problem/coord_type=RZ'

    requirement = 'The system shall support the separate mechanisms for Problem creation and setting Problem parameters.'
  [../]

  [./with_problem_block_and_type]
    type = 'RunApp'
    input = 'action_custom_fe_problem_test.i'
    expect_out = 'Hello, I am your FEProblemBase-derived class and my name is \S+'
    cli_args = 'Problem/coord_type=RZ Problem/type=MooseTestProblem'

    requirement = 'The system shall support multiple problem creation blocks provided they are consistent.'
  [../]

  [./with_problem_block_and_type_conflict]
    type = 'RunException'
    input = 'action_custom_fe_problem_test.i'
    expect_err = 'User requested problem types conflict'
    cli_args = 'Problem/type=FEProblem'

    requirement = 'The system shall error when multiple Problem creations conflict.'
  [../]
