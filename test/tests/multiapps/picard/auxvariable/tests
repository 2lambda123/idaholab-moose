    requirement = "The system shall error if"
    [secant_not_implemented]
      type = RunException
      input = 'main.i'
      cli_args = 'Executioner/fixed_point_algorithm=secant'
      expect_err = 'Secant acceleration of auxiliary variables has not been implemented'
      detail = 'acceleration of auxiliary variable convergence is requested with the secant method and it is currently not implemented'
    []
    [steffensen_not_implemented]
      type = RunException
      input = 'main.i'
      cli_args = 'Executioner/fixed_point_algorithm=steffensen'
      expect_err = 'Steffensen acceleration of auxiliary variables has not been implemented'
      detail = "acceleration of auxiliary variable convergence is requested with Steffensen's method and it is currently not implemented"
    []
