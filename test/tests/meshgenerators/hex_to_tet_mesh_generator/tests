[Tests]
  design = 'meshgenerators/HexToTetMeshGenerator.md'
  [invalid_input_elem]
    type = RunException
    input = non_hex.i
    cli_args = '--mesh-only'
    expect_err = "This mesh generator can only be applied to meshes with HEX8 elements!"
    requirement = "The system shall error if using a non-hex8 element type with the hex to tet converter"
    mesh_mode = 'replicated'
    issues = '#23822'
  []
  [convert]
    type = Exodiff
    input = convert.i
    exodiff = convert_out.e
    requirement = "The system shall convert a HEX8 mesh into a TET4 mesh"
    mesh_mode = 'replicated'
    issues = '#23822'
  []
  [convert_permuted]
    type = Exodiff
    input = sphere.i
    exodiff = sphere_out.e
    requirement = "The system shall convert a HEX8 mesh into a TET4 mesh with permuted elements"
    mesh_mode = 'replicated'
    issues = '#23822'
  []
[]
