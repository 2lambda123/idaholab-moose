  []

  [overlap]
    requirement = "The system shall be able to detect indetermination in a transfer due to"
    [origin_mesh]
      type = RunException
      input = main.i
      # We offset them a little, because overlaps when the transferred value is the same are not counted as overlaps
      cli_args = "Transfers/active='from_sub' Transfers/from_sub/greedy_search=true MultiApps/sub/positions='0 0 0 0.01 0 0'"
      expect_err = "Multiple origin positions & values were found."
      detail = 'overlapping origin child application, causing multiple shape evaluations to be valid'
      # In serial, the greedy search will catch it, and in parallel, the resolution of the communication will
    []
  []
