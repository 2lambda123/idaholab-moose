      detail = "the Ralston method,"
    []

    [midpoint]
      type = 'Exodiff'
      should_execute = False
      input = ''
      exodiff = 'explicitmidpoint_0.e explicitmidpoint_1.e explicitmidpoint_2.e'
      delete_output_before_running = False
      prereq = explicit/run

      detail = "the midpoint method, and"
    []

    [euler]
      type = 'Exodiff'
