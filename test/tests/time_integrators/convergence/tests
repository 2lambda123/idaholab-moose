[Tests]
  design = 'TimeIntegrator/index.md'
  issues = '#1929'
  [explicit]
    requirement = "The system shall include explicit time integration"

    [run]
      type = 'CSVDiff'
      command = 'explicit_convergence.py'
      csvdiff = 'explicit_convergence_heun.csv explicit_convergence_ralston.csv '
                'explicit_convergence_midpoint.csv explicit_convergence_euler.csv'

      detail = "that demonstrate the correct temporal convergence rates for"
    []

    [heun]
      type = 'Exodiff'
      should_execute = False
      input = ''
      exodiff = 'heun_0.e heun_1.e heun_2.e'
      delete_output_before_running = False
      prereq = explicit/run

      detail = "the Heun method,"
    []

    [ralston]
