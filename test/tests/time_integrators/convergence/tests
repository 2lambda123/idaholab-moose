  []

  [implicit]
    requirement = "The system shall include implicit time integration"

    [run]
      type = 'CSVDiff'
      command = 'implicit_convergence.py'
      csvdiff = 'implicit_convergence_midpoint.csv '
                'implicit_convergence_lstabledirk3.csv '
                'implicit_convergence_lstabledirk4.csv '
                'implicit_convergence_astabledirk4.csv '
                'implicit_convergence_astabledirk4_bootstrap.csv'

      detail = "that demonstrate the correct temporal convergence rates for"

     # Limited to OPT because it using the mms python module to run a test multiple times with
     # increasing refinement. On certain machines and with a debug build this can be rather slow. The
     # tests here are for a convergence study for the various time integrators, individual tests of
     # the integrators exist in other directories.
     method = 'OPT'
    []

    [midpoint]
      type = 'Exodiff'
      should_execute = False
      input = ''
      exodiff = 'implicitmidpoint_0.e implicitmidpoint_1.e implicitmidpoint_2.e'
      delete_output_before_running = False
      prereq = implicit/run

      detail = "the midpoint method,"
    []

    [lstabledirk3]
      type = 'Exodiff'
      should_execute = False
      input = ''
      exodiff = 'lstabledirk3_0.e lstabledirk3_1.e lstabledirk3_2.e'
      delete_output_before_running = False
      prereq = implicit/run

      detail = "the L-stable DIRK3 method,"
    []

    [lstabledirk4]
      # Test the LStableDirk4 time integration method.  On this test, the
      # end_time=1.  This method is slightly more expensive, so we do
      # fewer timesteps.
      type = 'Exodiff'
      should_execute = False
      input = ''
      exodiff = 'lstabledirk4_0.e lstabledirk4_1.e lstabledirk4_2.e'
      delete_output_before_running = False
      prereq = implicit/run

      detail = "the L-stable DIRK4 method,"
    []

    [astabledirk4]
      # Test the AStableDirk4 time integration method "bootstrapped" with
      # LStableDirk4.  This is the default behavior for the AStableDirk4
      # TimeIntegrator.  We use relatively large timesteps here, since
      # there is not much difference in the final results of AStableDirk4
      # and bootstrapped AStableDirk4 as dt->0.
      type = 'Exodiff'
      should_execute = False
      input = ''
      exodiff = 'astabledirk4_0.e astabledirk4_1.e astabledirk4_2.e'
      delete_output_before_running = False
      prereq = implicit/run

      detail = "the A-stable DIRK4 method, and"
    []

    [astabledirk4_bootstrap]
      type = 'Exodiff'
      should_execute = False
      input = ''
      exodiff = 'astabledirk4_bootstrap_0.e astabledirk4_bootstrap_1.e astabledirk4_bootstrap_2.e'
      delete_output_before_running = False
      prereq = implicit/run

      detail = "the A-stable DIRK4 method bootstrapped with L-stable DIRK."
    []
  []
[]
