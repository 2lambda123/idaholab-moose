[Tests]
  design = '/ActuallyExplicitEuler.md'
  issues = '10837'

  [./test]
    type = 'Exodiff'
    input = 'actually_explicit_euler.i'
    exodiff = 'actually_explicit_euler_out.e'

    requirement = 'MOOSE shall have the ability to integrate in time using the
      Forward Euler scheme efficiently, using the consistent mass matrix'
  [../]

  [./lumped]
    type = 'Exodiff'
    input = 'actually_explicit_euler_lumped.i'
    exodiff = 'actually_explicit_euler_lumped_out.e'

    requirement = 'MOOSE shall have the ability to integrate in time using the
      Forward Euler scheme efficiently, using the lumped mass matrix'
  [../]

  [./lump_preconditioned]
    type = 'Exodiff'
    input = 'actually_explicit_euler_lump_preconditioned.i'
    exodiff = 'actually_explicit_euler_lump_preconditioned_out.e'

    requirement = 'MOOSE shall have the ability to integrate in time using the
      Forward Euler scheme efficiently, using the consistent mass matrix, but
      preconditioned using the lumped mass matrix'
  [../]

  [./diverged]
    type = 'RunException'
    input = 'diverged.i'
    expect_err = 'Solve failed and timestep already at or below dtmin'
    cli_args = '--no-trap-fpe'

    requirement = 'MOOSE shall throw an error if the ActuallyExplicitEuler
      time integration scheme, using consistent mass matrix, fails'
  [../]

  [./diverged_lumped]
    type = 'RunException'
    input = 'diverged.i'
    expect_err = 'Solve failed and timestep already at or below dtmin'
    cli_args = '--no-trap-fpe Executioner/TimeIntegrator/solve_type=lumped'

    requirement = 'MOOSE shall throw an error if the ActuallyExplicitEuler
      time integration scheme, using lumped mass matrix, fails'
  [../]

  [./diverged_lump_prec]
    type = 'RunException'
    input = 'diverged.i'
    expect_err = 'Solve failed and timestep already at or below dtmin'
    cli_args = '--no-trap-fpe Executioner/TimeIntegrator/solve_type=lump_preconditioned'

    requirement = 'MOOSE shall throw an error if the ActuallyExplicitEuler
      time integration scheme, using consistent mass matrix preconditioned by
      the lumped mass matrix, fails'
  [../]

  [./nonlinear_residual]
    type = 'CSVDiff'
    input = 'actually_explicit_euler_nonlinear_residual.i'
    csvdiff = 'actually_explicit_euler_nonlinear_residual_out.csv'

    requirement = 'Allow final nonlinear residuals to be monitored for all time integrators'
    issues = '#11857'
  [../]
[]
