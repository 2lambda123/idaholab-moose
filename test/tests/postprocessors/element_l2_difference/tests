    type = CSVDiff
    input = element_l2_difference_time.i
    csvdiff = element_l2_difference_time_out.csv
    requirement = 'The system shall compute the element-wise L2 difference between a variable and the previous time step.'
    issues = '#19925'
  []
  [invaid_executioner]
