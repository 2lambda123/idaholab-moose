
# The location of the mesh library
meshdir := $(LIBMESH_DIR)

# include the library options determined by configure.  This will
# set the variables INCLUDE and LIBS that we will need to build and
# link with the library.
include $(meshdir)/Make.common

libmesh_INCLUDE := -I$(MOOSE_DIR)/include -I$(MOOSE_DIR)/include/materials $(libmesh_INCLUDE)
libmesh_LIBS := -L$(MOOSE_DIR) -Wl,-rpath,$(MOOSE_DIR) -lmoose-$(METHOD) $(libmesh_LIBS)

moose_LIB := $(MOOSE_DIR)/libmoose-$(METHOD)$(static_libext)

ifeq ($(enable-shared),yes)
  moose_LIB := $(MOOSE_DIR)/libmoose-$(METHOD)$(shared_libext)
endif
