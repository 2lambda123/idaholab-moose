#!/usr/bin/env python
import sys, os

#### Set the name of the application here and moose directory relative to the application
app_name = ''
MOOSE_DIR = '../moose'
#### See if MOOSE_DIR is already in the environment instead
if os.environ.has_key("MOOSE_DIR"):
  MOOSE_DIR = os.environ['MOOSE_DIR']


# Import the TestHarness and Helper functions from the MOOSE toolkit
sys.path.append(MOOSE_DIR + '/tests')
import tools

# create an instance of the test harness passing in the main arg vector
# and the name of the application
test_harness = tools.TestHarness(sys.argv, app_name)
test_harness.run_tests_and_exit()
